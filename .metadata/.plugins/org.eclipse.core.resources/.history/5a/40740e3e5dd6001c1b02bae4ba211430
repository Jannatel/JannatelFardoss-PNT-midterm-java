package beginnerjava;

import java.util.Scanner;

public class PyramidPattern {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		
		int row, col,j, n;
		
		
		
		System.out.print("Enter the length: ");
		
		n = input.nextInt();
		
		
		for(row = 1; row<=n; row++) 
		{
		
		
			for (col =n-1; col>=row; col--)
			{
				System.out.print(" ");
			}
			
			for (j=1; j<=row;j++) 
			{
			   System.out.print("* ");
			}
			
			System.out.println();
		}
		
	}

}
